<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/game_info_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/ic_launcher"/>
    <TextView
        android:id="@+id/game_info_gname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/game_info_image"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/game_info_gtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/game_info_gname"
        android:layout_alignLeft="@id/game_info_gname"
        android:layout_alignStart="@id/game_info_gname"/>
    <TextView
        android:id="@+id/game_info_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/game_info_image"
        android:layout_alignLeft="@id/game_info_gtype"
        android:layout_alignStart="@id/game_info_gtype"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/game_info_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/game_info_image"/>
    <TextView
        android:id="@+id/game_info_message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_info_recycler_view"
        android:text="游戏介绍"
        android:textSize="18sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/game_info_game_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_info_message_tv"/>

    <Button
        android:id="@+id/game_info_download_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/get_gift_btn_enable"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/game_info_download_btn"
        android:background="@color/colorBtn"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>