<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/boutique_simple_item_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"/>
    <TextView
        android:id="@+id/boutique_simple_item_gname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/boutique_simple_item_image"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/boutique_simple_item_game_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@id/boutique_simple_item_gname"
        android:textColor="#d5d5d5"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/boutique_simple_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/boutique_simple_item_gname"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorBtn"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/boutique_simple_item_player_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBtn"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>